a=input("Enter a binary number:")
bin_num="01"
for i in range(len(a)):
    binary=True
    if(a[i] not in bin_num):
        print("Invalid")
        binary=False
        break
if binary:
    d=int(a,2)
    o=oct(d)
    h=hex(d)
    print("The decimal number is:",d)
    print("The octal number is:",o)
    print("The hexadecimal is:",h)
